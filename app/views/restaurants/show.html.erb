<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h1>Reviews</h1>

<% @reviews.each do |review| %>
 <p><%= review.content %></p>
 <p><%= review.rating %></p>
<% end %>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary"%>
<%= link_to 'Write new review', new_restaurant_review_path(@restaurant.id), class: "btn btn-primary"%>
